<div class="card-header">
  <% if comment.updated_at.eql? comment.created_at %>
    <span class="fw-semibold text-center"><%= comment.created_at.strftime '%Y-%m-%d %H:%M' %></span>
  <% else %>
    <span class="fw-semibold text-center"><%= comment.updated_at.strftime '%Y-%m-%d %H:%M' %> (Updated)</span>
  <% end %>
</div>
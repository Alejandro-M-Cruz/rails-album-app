<article class="col">
  <div class="card h-100">
    <%= link_to post, id: dom_id(post), class: 'no-format-link' do %>
      <div class="card-img-top text-center bg-dark">
        <% if post.image.present? %>
          <%= image_tag post.image, alt: post.description, height: '200', class: 'rounded-top post-image' %>
        <% end %>
      </div>
      <div class="card-body d-flex flex-column">
        <p class="card-text text-secondary flex-grow-1"><%= post.description %></p>
      </div>
    <% end %>
    <div class="card-footer d-flex justify-content-between align-items-center">
      <% if current_page? my_posts_path %>
          <span class="badge <%= post.public ? 'bg-success' : 'bg-primary' %>">
            <%= post.public ? 'Public' : 'Private' %>
          </span>
      <% end %>
      <span class="text-end fw-semibold"><%= post.created_at.strftime '%Y-%m-%d %H:%M' %></span>
      <%= button_to post_like_path(post), method: :patch, class: 'btn btn-sm btn-outline-primary fs-5' do %>
        <i class="bi bi-hand-thumbs-up<%= post.liked_by?(current_user) ? '-fill' : '' %>"></i> <%= post.likes_count %>
      <% end %>
    </div>
  </div>



</article>
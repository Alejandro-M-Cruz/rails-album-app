<div class="container">
  <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
    <%= link_to root_path, class: 'd-flex align-items-center mb-2 mb-lg-0 me-4 text-white text-decoration-none' do %>
      <i class="bi bi-card-image navbar-logo"></i>
    <% end %>
    <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
      <%= navbar_links %>
    </ul>

    <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
      <input type="search" class="form-control form-control-dark text-bg-dark" placeholder="Search..." aria-label="Search">
    </form>

    <% if user_signed_in? %>
      <div class="text-end">
        <%= button_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-outline-light me-2' %>
        <button type="button" class="btn btn-warning">Profile</button>
      </div>
    <% else %>
      <div class="text-end">
        <%= link_to 'Log in', new_user_session_path, class: 'btn btn-outline-light me-2' %>
        <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-warning' %>
      </div>
    <% end %>

  </div>
</div>
<% if alert %>
  <div class="alert alert-warning position-fixed" role="alert" data-controller="alerts">
    <i class="bi bi-exclamation-triangle-fill"></i>&emsp;<span><%= alert %></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
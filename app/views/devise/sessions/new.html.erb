<%=
  form_for(
    resource,
    as: resource_name,
    url: session_path(resource_name),
    html: {class: 'form-card'}
  ) do |form|
%>
  <div class="card-header">
    <h2 class="card-title text-center">Log in</h2>
  </div>

  <div class="card-body">
    <div class="mb-3">
      <%= form.label :email %>
      <%= form.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-2' %>
    </div>

    <div class="mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, autocomplete: "current-password", class: 'form-control mt-2' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= form.check_box :remember_me, class: 'form-check-input' %>
        <%= form.label :remember_me, class: 'form-check-label' %>
      </div>
    <% end %>
  </div>

  <div class="card-footer d-flex flex-column gap-3">
    <div class="d-flex flex-column flex-lg-row justify-content-around align-items-center text-center gap-3">
      <%= render "devise/shared/links" %>
    </div>
    <div class="d-flex justify-content-center gap-1 gap-sm-5">
      <%= link_to 'Cancel', root_path, class: 'btn btn-outline-danger' %>
      <%= form.submit "Log in", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>


